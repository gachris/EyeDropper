<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:devtoolbox="http://devtoolbox.wpf/winfx/2021/xaml/presentation"
    xmlns:loc="clr-namespace:EyeDropper.Localization.Properties;assembly=EyeDropper.Localization"
    xmlns:viewModels="clr-namespace:EyeDropper.Bootstrapper.UI.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:ElevateErrorViewModel}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Margin="32,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image
                    Width="300"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/EyeDropper.Bootstrapper.UI;component/Assets/welcome-page-color-picker.png"
                    Stretch="Uniform" />
                <StackPanel Grid.Column="1">
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="{x:Static loc:Resources.Administrative_privileges_required}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="16"
                        Text="{x:Static loc:Resources.The_installation_requires_administrative_privileges_to_make_changes_to_your_computer}"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Margin="0,0,0,20"
                        FontSize="16"
                        Text="{x:Static loc:Resources.Generic_elevate_error_message}"
                        TextWrapping="Wrap" />
                    <Button
                        Margin="0,0,0,20"
                        HorizontalAlignment="Left"
                        Command="{Binding OpenLogCommand}"
                        FontSize="16"
                        Style="{StaticResource HyperlinkButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="2,0,0,0" Text="{x:Static loc:Resources.View_logs}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Button}, Path=IsMouseOver}" Value="True">
                                                <Setter Property="TextDecorations" Value="Underline" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Separator
                Grid.Row="1"
                Margin="0"
                Style="{DynamicResource SimpleHorizontalSeparatorStyle}" />
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    MinWidth="80"
                    Margin="4,14,22,14"
                    Padding="6"
                    devtoolbox:UIElementHelper.CornerRadius="2"
                    Command="{Binding CloseCommand}"
                    Content="{x:Static loc:Resources.Close}"
                    FontSize="14" />
            </StackPanel>
        </Grid>
    </DataTemplate>

</ResourceDictionary>